@model E_Commerce.Models.Product

@{
    ViewData["Title"] = "Product Details";
}
<div>
<a href="@Url.Action("ProductList", "Product")" class="btn btn-primary">Back to Product List</a>
</div>&nbsp;
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="@Url.Content(Model.Image)" alt="@Model.ProductName" class="img-fluid custom-img-size">
        </div>
        <div class="col-md-6">
            <h2>@Model.ProductName</h2>
            <p><strong>Price:</strong> @Model.Price</p>
            <p><strong>Stock:</strong> @Model.Stock</p>
            <p><strong>Description:</strong>@Model.Description</p>
           
        </div>
    </div>
</div> &nbsp;&nbsp;

<form asp-controller="Cart" asp-action="AddToCart" method="post">
    <input type="hidden" name="productId" value="@Model.ProductId" />
    <button type="submit" class="btn btn-success">Add to Cart</button>
</form>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMsg))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMsg
    </div>
}